# Project details.
PROJECT_NAME = "@CMAKE_PROJECT_NAME@"
PROJECT_NUMBER = "@CMAKE_PROJECT_VERSION@"

# Choose input.
INPUT = "@DOXYGEN_INPUT_DIR@" README.md
USE_MDFILE_AS_MAINPAGE = README.md
EXCLUDE_PATTERNS = *test.*

# Configure output.
OUTPUT_DIRECTORY = "@DOXYGEN_OUTPUT_DIR@"
STRIP_FROM_PATH = "@DOXYGEN_INPUT_DIR@"
GENERATE_HTML = YES
HTML_OUTPUT = html
FULL_PATH_NAMES = YES

# Silence build warnings and update messages.
QUIET = YES
WARN_LOGFILE = "@DOXYGEN_WARN_LOGFILE@"

# Generate recursively from root source dir.
RECURSIVE = YES

# Spec commenting style.
JAVADOC_AUTOBRIEF = YES
QT_AUTOBRIEF = YES

# Generate graphs if dot is installed.
HAVE_DOT = @DOXYGEN_HAVE_DOT@
DOT_PATH = @DOXYGEN_DOT_PATH@

# Configure options.
ENABLE_PREPROCESSING = YES
EXTRACT_ALL = NO
EXCLUDE_SYMBOLS = *::detail*

# Use clang to do actual parsing. This lets doxygen see through templates, but
# it also disables call and caller graphs.
CLANG_ASSISTED_PARSING = YES
CLANG_DATABASE_PATH = "@DOXYGEN_CLANG_DATABASE_PATH@"
