{
    "version": 10,
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "generator": "Ninja"
        },

        {
            "name": "debug",
            "hidden": true,
            "cacheVariables": {"CMAKE_BUILD_TYPE": "Debug"}
        },
        {
            "name": "release",
            "hidden": true,
            "cacheVariables": {"CMAKE_BUILD_TYPE": "Release"}
        },

        {
            "name": "clang",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "gcc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "cl",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe"
            }
        },

        {
            "name": "cl-debug",
            "inherits": ["default", "cl", "debug"]
        },
        {
            "name": "cl-release",
            "inherits": ["default", "cl", "release"]
        },
        {
            "name": "clang-debug",
            "inherits": ["default", "clang", "debug"]
        },
        {
            "name": "clang-release",
            "inherits": ["default", "clang", "release"]
        },
        {
            "name": "gcc-debug",
            "inherits": ["default", "gcc", "debug"]
        },
        {
            "name": "gcc-release",
            "inherits": ["default", "gcc", "release"]
        }
    ],

    "buildPresets": [
        {
            "name": "cl-debug",
            "configurePreset": "cl-debug"
        },
        {
            "name": "cl-release",
            "configurePreset": "cl-debug"
        },
        {
            "name": "clang-debug",
            "configurePreset": "clang-debug"
        },
        {
            "name": "clang-release",
            "configurePreset": "clang-release"
        },
        {
            "name": "gcc-debug",
            "configurePreset": "gcc-debug"
        },
        {
            "name": "gcc-release",
            "configurePreset": "gcc-release"
        }
    ]
}
